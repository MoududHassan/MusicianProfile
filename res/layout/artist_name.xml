<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    
    <TextView
        android:id="@+id/credentialTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Profile Setup"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/credentialTitle"
        android:layout_alignRight="@+id/credentialTitle"
        android:layout_below="@+id/credentialTitle"
        android:layout_marginTop="37dp"
        android:gravity="center"
        android:text="Email Address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/musitiantype_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Musitian Type"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/artistName_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artistName_confirm"
        android:layout_centerHorizontal="true"
        android:hint="Artist Name"
        android:layout_marginBottom="14dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/artistName_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Confirm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/artistName_spinner"
        android:layout_below="@+id/musitiantype_artistName"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="Do you use an artist name?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/artistName_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artistName_field"
        android:layout_alignLeft="@+id/artistName_field"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:spinnerMode="dropdown" />

</RelativeLayout>
